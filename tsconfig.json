{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
  }